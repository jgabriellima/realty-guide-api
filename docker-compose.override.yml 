version: '3.8'

services:
  api:
    command: uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload
    environment:
      - ENVIRONMENT=development
    env_file:
      - .env.development
    volumes:
      - .:/app

  worker:
    command: watchmedo auto-restart --recursive --pattern="*.py" --directory=app -- python app/worker.py
    environment:
      - ENVIRONMENT=development
      - MODE=worker
    env_file:
      - .env.development
    volumes:
      - .:/app
